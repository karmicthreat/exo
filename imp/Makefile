#----------------------------------------
#   __   __        _      _    _
#   \ \ / /_ _ _ _(_)__ _| |__| |___ ___
#    \ V / _` | '_| / _` | '_ \ / -_|_-<
#     \_/\__,_|_| |_\__,_|_.__/_\___/__/
#
include $(EXO_ROOT)/vars.mk

FLAGS+=-std=c++11
INC+=-Iinc/

#----------------------------------------
#    ___      _
#   | _ \_  _| |___ ___
#   |   / || | / -_|_-<
#   |_|_\\_,_|_\___/__/
#
obj/$(TARGET):
	mkdir obj/$(TARGET)

obj/$(TARGET)/%.o: src/%.cpp obj/$(TARGET)
	$(CMP) $(INC) $(FLAGS) -c $< -o $@

clean:
	rm -rf obj
